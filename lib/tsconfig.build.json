{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "types": ["react"], // ensure global JSX definitions from @types/react are loaded
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["/src"],
  "exclude": ["node_modules", "dist"]
}